@model APP.Models.StudyGroup

@{
    ViewBag.Title = "Создание учебной группы";
}



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Создание учебной группы</legend>

        <div class="editor-label">
     Наименование группы:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
          Выберите преподавателя:
        </div>
        <div class="editor-field">
         


            @Html.DropDownList("List", String.Empty)
   
        </div>

        <p>
            <input type="submit" value="Создать учебную группу" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад", "StudyGroup")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
